{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
        "text": "Electricity Generation from Fossil Fuels Per Capita",
        "font": "Open Sans",
        "dy": 50
    },
    "width": "container",
    "height": "container",
    "autosize": {
        "type": "fit",
        "contains": "padding"
    },
    "projection": {
        "type": "equalEarth"
    },
    "layer": [
        {
            "data": {
                "url": "ne_10m_ocean.json",
                "format": {
                    "type": "topojson",
                    "feature": "ne_10m_ocean" 
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": "lightsteelblue"
            }
        },
        {
            "data": {
                "url": "ne_110m_graticules_30.json",
                "format": {
                    "type": "topojson",
                    "feature": "ne_110m_graticules_30"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": null,
                "clip": true,
                "stroke": "lightgrey"
            }
        },

        {
            "data": {
                "url": "ne_110m_admin_0_countries.json",
                "format": {
                    "type": "topojson",
                    "feature": "ne_110m_admin_0_countries"
                }
            },
            "transform": [
                {
                    "lookup": "properties.NAME",
                    "from": {
                        "data": {
                            "url": "cleaned-fossil-electricity-per-capita.csv"
                        },
                        "key": "Entity",
                        "fields": [
                            "Fossil fuel electricity per capita - kWh",
                            "Year"
                        ]
                    }
                }
            ],
            "mark": {
                "type": "geoshape",
                "stroke": "black",
                "strokeWidth": 0.5
            },
            "encoding": {
                "color": {
                    "field": "Fossil fuel electricity per capita - kWh",
                    "type": "quantitative",
                    "title": "Fossil fuel per capita (kWh)",
                    "scale": {
                        "type": "threshold",
                        "scheme": "greenblue",
                        "domain": [2000, 4000, 6000, 8000]
                    },
                    "legend":{
                        "orient": "right",
                        "offset": 50
                    }
                },
                "tooltip": [
                    {
                        "field": "properties.NAME",
                        "type": "nominal",
                        "title": "Country"
                    },
                    {
                        "field": "Fossil fuel electricity per capita - kWh",
                        "type": "quantitative",
                        "title": "Fossil fuel electricity per capita (kWh)"
                    },
                    {
                        "field": "Year",
                        "type": "nominal",
                        "title": "data from year "
                    }
                ]
            }
        }

    ],
    "config":{
        "font": "Open Sans",
        "title": {
            "font": "Open Sans",
            "fontSize": 16,
            "fontWeight": "bold"
        }
    }
}